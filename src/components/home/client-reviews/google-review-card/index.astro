---

//IMPORT ASTRO ATOMS
import Heading6_blue from "@/atoms-diksha/headings/six/color-blue/index.astro"
import Heading6_grey from "@/atoms-diksha/headings/six/color-grey/index.astro"

---

<div class="bg-white p-6 w-72 h-52 relative flex items-center justify-center">
	<div class="absolute top-6 right-0">
		<img
			src="/icons/google_symbol.svg"
			alt="Google Icon"
			class="w-3 h-3"
		/>
	</div>
	<div class="flex items-center gap-2">
		<img
			src="/icons/storefront.svg"
			alt="Storefront Icon"
			class="h-16"
		/>
		<div class="flex flex-col gap-1">
			<Heading6_blue>Excellent</Heading6_blue>
			<Heading6_blue>The Media Captain</Heading6_blue>
			<div class="flex items-center">
				<span class="text-orange-400 text-xl font-geomanist_light mr-1">4.9</span>
				{
					Array(5)
						.fill(0)
						.map(() => (
							<div class="flex space-x-1">
								<span class="text-orange-400 material-symbols-rounded">star</span>
							</div>
						))
				}
			</div>
			<Heading6_grey>Based on 151 reviews</Heading6_grey>
			<div class="absolute bottom-5 left-20 flex gap-2">
				<button class="rounded-full bg-blue-600 px-2 py-1 text-[12px] text-white font-geomanist_light"> See all reviews </button>
				<button class="flex gap-1 items-center rounded-full bg-blue-600 px-2 py-1 text-[12px] text-white font-geomanist_light">
					review us on
					<img
						src="/icons/google_symbol.svg"
						alt="Google Icon"
						class="w-3 h-3 bg-white rounded-full"
					/>
				</button>
			</div>
		</div>
	</div>
</div>
