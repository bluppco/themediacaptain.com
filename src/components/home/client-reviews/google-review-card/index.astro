---

//IMPORT ASTRO ATOMS
import ButtonBlue from "@/atoms-diksha/buttons/color-blue/index.astro"
import HeadingSixBlue from "@/atoms-diksha/headings/six/blue/index.astro"
import HeadingSixGrey from "@/atoms-diksha/headings/six/grey/index.astro"
import Picture from "@/atoms-diksha/picture/index.astro"

---

<div class="bg-white p-6 w-72 h-52 relative flex items-center justify-center">
	<div class="absolute top-6 right-0">
		<div class="w-3 h-3">
			<Picture image_source="/icons/google-logo.svg" image_alt="Google Icon" />
		</div>
	</div>
	<div class="flex items-center gap-2">
		<div class="h-16">
			<Picture image_source="/icons/storefront.svg" image_alt="Storefront Icon" />
		</div>
		<div class="flex flex-col gap-1">
			<HeadingSixBlue>Excellent</HeadingSixBlue>
			<HeadingSixBlue>The Media Captain</HeadingSixBlue>
			<div class="flex items-center">
				<span class="text-orange-400 text-xl font-geomanist_light mr-1">4.9</span>
				{
					Array(5)
						.fill(0)
						.map(() => (
							<div class="flex space-x-1">
								<span class="text-orange-400 material-symbols-rounded">star</span>
							</div>
						))
				}
			</div>
			<HeadingSixGrey>Based on 151 reviews</HeadingSixGrey>
			<div class="absolute bottom-5 left-20 flex gap-2">
				<ButtonBlue> See all reviews </ButtonBlue>
				<ButtonBlue styles="flex gap-1 items-center">
					review us on
					<div class="w-3 h-3 bg-white rounded-full">
						<Picture
							image_source="/icons/google-logo.svg"
							image_alt="Google Icon"
						/>
					</div>
				</ButtonBlue>
			</div>
		</div>
	</div>
</div>
